@model Web_vuottai.Models.LOP

@{
    ViewData["Title"] = "Create";
}

<h1>TẠO MỚI THÔNG TIN LỚP HỌC</h1>

<h4>LỚP</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaLop" class="control-label">Mã Lớp</label>
                <input asp-for="MaLop" class="form-control" />
                <span asp-validation-for="MaLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLop" class="control-label">Tên lớp</label>
                <input asp-for="TenLop" class="form-control" />
                <span asp-validation-for="TenLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuanSo" class="control-label">Quân số</label>
                <input asp-for="QuanSo" class="form-control" />
                <span asp-validation-for="QuanSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
