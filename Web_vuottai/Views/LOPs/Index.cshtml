@model IEnumerable<Web_vuottai.Models.LOP>

@{
    ViewData["Title"] = "Quản lý Lớp";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
@{
    ViewData["Title"] = "Quản lý Lớp";
    // Lấy lại giá trị filter từ Controller
    string? maLopFilter = ViewData["MaLopFilter"] as string;
    string? tenLopFilter = ViewData["TenLopFilter"] as string;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">

        <!-- ===== THAY THẾ <p>...</p> BẰNG FORM NÀY ===== -->
        <form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end p-3 border rounded-3">
            <div class="col-md-4">
                <label class="form-label" for="maLopFilter">Mã Lớp</label>
                <input type="text" name="maLopFilter" id="maLopFilter" class="form-control" value="@maLopFilter" placeholder="Tìm theo mã..."/>
            </div>
            <div class="col-md-4">
                <label class="form-label" for="tenLopFilter">Tên Lớp</label>
                <input type="text" name="tenLopFilter" id="tenLopFilter" class="form-control" value="@tenLopFilter" placeholder="Tìm theo tên..."/>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Lọc</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-secondary">Làm mới</a>
            </div>
            <!-- Nút Thêm mới được chuyển vào đây -->
            <div class="col-auto ms-auto"> 
                <a asp-action="Create" class="btn btn-success">Thêm mới</a>
            </div>
        </form>
        <!-- ===== KẾT THÚC FORM ===== -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã Lớp</th>
                    <th>Tên Lớp</th>
                    <th>Quân Số</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaLop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuanSo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
