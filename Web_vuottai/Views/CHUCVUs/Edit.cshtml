@model Web_vuottai.Models.CHUCVU

@{
    ViewData["Title"] = "Edit";
}

<h1>CHỈNH SỬA THÔNG TIN CHỨC VỤ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChucVuId" />
            <div class="form-group">
                <label asp-for="TenChucVu" class="control-label">Tên chức vụ</label>
                <input asp-for="TenChucVu" class="form-control" />
                <span asp-validation-for="TenChucVu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TyLeDinhMuc" class="control-label">Tỷ lệ định mức</label>
                <input asp-for="TyLeDinhMuc" class="form-control" />
                <span asp-validation-for="TyLeDinhMuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
