@model IEnumerable<Web_vuottai.Models.CHUCVU>

@{
    ViewData["Title"] = "Quản lý Chức vụ";
    // Lấy lại giá trị filter từ Controller
    string? tenChucVuFilter = ViewData["TenChucVuFilter"] as string;
    int? tyLeDinhMucFilter = ViewData["TyLeDinhMucFilter"] as int?; // Lấy filter mới
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">

        <form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end p-3 border rounded-3">
            <div class="col-md-4">
                <label class="form-label" for="tenChucVuFilter">Tên Chức vụ</label>
                <input type="text" name="tenChucVuFilter" id="tenChucVuFilter" class="form-control" value="@tenChucVuFilter" placeholder="Tìm theo tên..."/>
            </div>
            
            <div class="col-md-3">
                <label class="form-label" for="tyLeDinhMucFilter">Tỷ lệ định mức (%)</label>
                <input type="number" name="tyLeDinhMucFilter" id="tyLeDinhMucFilter" class="form-control" value="@tyLeDinhMucFilter" placeholder="Lọc theo %..."/>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Lọc</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-secondary">Làm mới</a>
            </div>
            
            <div class="col-auto ms-auto"> 
                <a asp-action="Create" class="btn btn-success">Thêm mới</a>
            </div>
        </form>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tên Chức vụ</th>
                    <th>Tỷ lệ định mức (%)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenChucVu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TyLeDinhMuc)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ChucVuId" class="btn btn-sm btn-outline-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.ChucVuId" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.ChucVuId" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>