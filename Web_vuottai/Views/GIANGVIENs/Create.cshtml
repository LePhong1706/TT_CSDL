
@model GiangVienUpsertVm
@{
    ViewData["Title"] = Model.GiangVienId == null ? "Tạo mới giảng viên" : "Cập nhật giảng viên";
}
<h1>@ViewData["Title"]</h1>
<hr />
<form asp-action="@(Model.GiangVienId==null?"Create":"Edit")" method="post" class="row g-3">
    @if (Model.GiangVienId != null)
    {
        <input type="hidden" asp-for="GiangVienId" />
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-3">
        <label asp-for="MaGV" class="form-label">Mã giáo viên</label>
        <input asp-for="MaGV" class="form-control" />
        <span asp-validation-for="MaGV" class="text-danger"></span>
    </div>
    <div class="col-md-5">
        <label asp-for="HoTen" class="form-label">Họ và tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="DonViId" class="form-label">Đơn vị</label>
        <select asp-for="DonViId" class="form-select" asp-items="ViewBag.DonViList">
            <option value="">-- Chọn đơn vị --</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="ChucVuId" class="form-label">Chức vụ</label>
        <select asp-for="ChucVuId" class="form-select" asp-items="ViewBag.ChucVuList">
            <option value="">-- Chọn chức vụ --</option>
        </select>
    </div>

    <div class="col-md-4">
        <label asp-for="ChucDanhId" class="form-label">Chức danh</label>
        <select asp-for="ChucDanhId" class="form-select" asp-items="ViewBag.ChucDanhList">
            <option value="">-- Chọn chức danh --</option>
        </select>
        <span asp-validation-for="ChucDanhId" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="NamHoc" class="form-label">Năm học</label>
        <select asp-for="NamHoc" class="form-select" asp-items="ViewBag.NamHocList"></select>
    </div>
    <div class="col-md-2">
        <label asp-for="HocKy" class="form-label">Học kỳ</label>
        <select asp-for="HocKy" class="form-select">
            <option value="1">Học kỳ 1</option>
            <option value="2">Học kỳ 2</option>
        </select>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
