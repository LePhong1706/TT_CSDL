@model IEnumerable<Web_vuottai.Models.DONVI>

@{
    ViewData["Title"] = "Quản lý Đơn vị";
    // Lấy lại giá trị filter từ Controller (dùng string? để tránh cảnh báo)
    string? maDonViFilter = ViewData["MaDonViFilter"] as string;
    string? tenDonViFilter = ViewData["TenDonViFilter"] as string;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">

        <form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end p-3 border rounded-3">
            <div class="col-md-4">
                <label class="form-label" for="maDonViFilter">Mã Đơn vị</label>
                <input type="text" name="maDonViFilter" id="maDonViFilter" class="form-control" value="@maDonViFilter" placeholder="Tìm theo mã..."/>
            </div>
            <div class="col-md-4">
                <label class="form-label" for="tenDonViFilter">Tên Đơn vị</label>
                <input type="text" name="tenDonViFilter" id="tenDonViFilter" class="form-control" value="@tenDonViFilter" placeholder="Tìm theo tên..."/>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Lọc</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-secondary">Làm mới</a>
            </div>
            <div class="col-auto ms-auto"> 
                <a asp-action="Create" class="btn btn-success">Thêm mới</a>
            </div>
        </form>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaDonVi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenDonVi)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDonVi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDonVi)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.DonViId" class="btn btn-sm btn-outline-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.DonViId" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.DonViId" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>