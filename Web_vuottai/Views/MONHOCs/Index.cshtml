@model IEnumerable<Web_vuottai.Models.MONHOC>

@{
    ViewData["Title"] = "Quản lý Môn học";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">

@{
    ViewData["Title"] = "Quản lý Môn học";
    // Lấy lại giá trị filter từ Controller (dùng string? để tránh cảnh báo)
    string? maMonFilter = ViewData["MaMonFilter"] as string;
    string? tenMonFilter = ViewData["TenMonFilter"] as string;
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">

        <!-- ===== THAY THẾ <p>...</p> BẰNG FORM NÀY ===== -->
        <form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end p-3 border rounded-3">
            <div class="col-md-4">
                <label class="form-label" for="maMonFilter">Mã Môn học</label>
                <input type="text" name="maMonFilter" id="maMonFilter" class="form-control" value="@maMonFilter" placeholder="Tìm theo mã..."/>
            </div>
            <div class="col-md-4">
                <label class="form-label" for="tenMonFilter">Tên Môn học</label>
                <input type="text" name="tenMonFilter" id="tenMonFilter" class="form-control" value="@tenMonFilter" placeholder="Tìm theo tên..."/>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Lọc</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-secondary">Làm mới</a>
            </div>
            <!-- Nút Thêm mới được chuyển vào đây -->
            <div class="col-auto ms-auto"> 
                <a asp-action="Create" class="btn btn-success">Thêm mới</a>
            </div>
        </form>
        <!-- ===== KẾT THÚC FORM ===== -->

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaMonHoc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenMonHoc)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaMonHoc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenMonHoc)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MonHocId" class="btn btn-sm btn-outline-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.MonHocId" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.MonHocId" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
