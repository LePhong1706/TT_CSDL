@model Web_vuottai.Models.THOIKHOABIEU

@{
    ViewData["Title"] = "Chỉnh sửa Năm học - Học kỳ";
}

<h1>@ViewData["Title"]</h1>

<h4>Năm học - Học kỳ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TkbId" />
            <div class="form-group">
                <label asp-for="NamHoc" class="control-label">Năm học</label>
                <input asp-for="NamHoc" class="form-control" />
                <span asp-validation-for="NamHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HocKy" class="control-label">Học kỳ</label>
                <input asp-for="HocKy" class="form-control" />
                <span asp-validation-for="HocKy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTkb" class="control-label">Tên thời khóa biểu</label>
                <input asp-for="TenTkb" class="form-control" />
                <span asp-validation-for="TenTkb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
