@model Web_vuottai.Models.GIANGVIEN

@{
    ViewData["Title"] = "Delete";
}

<h1>XÓA THÔNG TIN GIẢNG VIÊN</h1>

<h3>Bạn có chắc muốn xóa thông tin giảng viên này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã giảng viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaGV)
        </dd>
        <dt class = "col-sm-2">
            Họ tên giảng viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            Chức vụ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChucVu.TenChucVu)
        </dd>
        <dt class = "col-sm-2">
            Đơn vị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonVi.TenDonVi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GiangVienId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary" >Quay lại</a>
    </form>
</div>
