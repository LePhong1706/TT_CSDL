@model Web_vuottai.Models.DONVI

@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<h1>XÓA THÔNG TIN ĐƠN VỊ</h1>

<h3>Bạn có chắc chắn muốn xóa đơn vị này không?</h3>
<div>
    <h4>ĐƠN VỊ</h4>
    <hr />
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaDonVi) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaDonVi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenDonVi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenDonVi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DonViId" />
        
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>