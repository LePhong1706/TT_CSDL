@model Web_vuottai.Models.NGONNGU

@{
    ViewData["Title"] = "Edit";
}

<h1>SỬA THÔNG TIN NGÔN NGỮ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NgonNguId" />
            <div class="form-group">
                <label asp-for="TenNgonNgu" class="control-label">Tên ngôn ngữ</label>
                <input asp-for="TenNgonNgu" class="form-control" />
                <span asp-validation-for="TenNgonNgu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeSo" class="control-label">Hệ số</label>
                <input asp-for="HeSo" class="form-control" />
                <span asp-validation-for="HeSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary" >Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
